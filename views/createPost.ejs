<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    <h1>Blog</h1>
    <div class="container">

        <div class="row">
            <div class="col-6">
                <form action="/createPost" method="POST">
                    <input readonly type="text" name="id" id="id" value="<%=member._id%>">
                    <div class="form-group">
                      <label for="title">Blog Title</label>
                      <input type="text" name="title" class="form-control" id="title" placeholder="Blog Title">
                    </div>
                    <div class="form-group">
                      <label for="imageLink">Image Link</label>
                      <input type="text" name="link" class="form-control" id="imageLink" placeholder="Enter Image Link">
                    </div>
                 
                    <div class="form-group">
                      <label for="exampleFormControlTextarea1">Description ( use HTML format to write description )</label>
                      <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="10" placeholder="Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Blog</button>
                  </form>
            </div>
            <div id="description" class="col-6">

               <h1>fsdkjhk</h1> 
               <hr>

            </div>
        </div>
       
    </div>

    <!-- Optional JavaScript -->
