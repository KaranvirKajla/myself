<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Message</title>
    <link rel="stylesheet" href="/spreadsheets/teamHome.css">
 
  </head>
  <body>
    
    
    <% let i=0,j=0;%>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Messages</a>
      <ul>
      <a href="/postHome/<%=member._id%>" class="nav-item btn btn-primary">My Posts</a>
    </ul>
      </nav>

    <nav class="navbar navbar-dark bg-dark">
        
            <form class="form-inline">
                    <input class="form-control mr-sm-2 col-12" type="search" placeholder="Search by email" aria-label="Search" id="searchStudent">
                   
                  </form>
          </nav>

          <div class="container-fluid">
          <div class="row">
          <div class="col-6">
          
            <ul class="list-group">
      
           

               <% for(i=persons.length-1;i>=0;i--){%>

               <a href="/teamHome/<%=member._id%>/<%=persons[i]._id%>">
          
                <%if(persons[i]._id.equals(person._id)){%>
                    <li class="list-group-item active"><%= persons[i].email%></li>
                <%}else{%>
                    <li class="list-group-item "><%= persons[i].email%></li>
               <% }%>
                
               </a>
                    
           <% }%>
              <!-- <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr> -->
            </ul>
          </div>


          <div class="col-6" style="overflow-y: scroll; position: relative; background-color: brown; height: 90vh;">
            <div id="messages">
                

                <% for(i=0,j=0;i<person.send.length && j<person.receive.length;){ %>
                    <% if(person.send[i].time>person.receive[j].time){%>
                        <div class="card receive" style="width: 51%;">
                            <div class="card-body">
                              <%= person.receive[j].message%>
                            </div>
                          </div>
                          <% j++; %>
                  <%  }else{%>
                        <div class="card send" style="width: 51%; float: right;">
                            <div class="card-body">
                                <%= person.send[i].message%>
                            </div>
                          </div>
                         <% i++;%>
                  <%  }%>
                  <%}%>
                  <% if(i==person.send.length){%>
                    <%   for(j=j;j<person.receive.length;j++){%>
                        <div class="card receive" style="width: 51%;">
                            <div class="card-body">
                                <%= person.receive[j].message%>
                            </div>
                          </div>
                          <%  }%>
                          <% }%>
                          <% if(j==person.receive.length){%>
                            <%  for(i=i;i<person.send.length;i++){%>
                        <div class="card receive" style="width: 51%; float: right;">
                            <div class="card-body">
                                <%= person.send[i].message%>
                            </div>
                          </div>
                          <%  }%>
                          <% }%>

            </div>
            <!-- <div class="card receive" style="width: 18rem;">
                <div class="card-body">
                  This is some text within a card body.
                </div>
              </div>
              <div class="card send" style="width: 18rem; float: right;">
                <div class="card-body">
                  This is some text within a card body.
                </div>
              </div> -->
         


              <form style="position: absolute; bottom: 20px; right: 20px; width: 100%;" action="/teamMessage" method="POST">
                <input type="text" name="pid" value="<%= person._id%>">
                <input type="text" name="id" value="<%= member._id%>">
                <div class="container row">
                    <div class="col-10">  <input class="form-control" type="text" name="message"></div>
                  
                    <div class="col-2"><input type="submit"  value="Send"></div>
                    
                </div>
              
            </form>

          </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>